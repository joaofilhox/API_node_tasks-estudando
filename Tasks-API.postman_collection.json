{
    "info": {
        "name": "Tasks API",
        "description": "Coleção de endpoints para testar a API de Tasks",
        "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
    },
    "item": [
        {
            "name": "Tasks",
            "item": [
                {
                    "name": "Criar Task",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"title\": \"Estudar TypeScript\",\n  \"description\": \"Aprender conceitos avançados de TypeScript\",\n  \"steps\": [\n    \"Instalar TypeScript\",\n    \"Configurar tsconfig.json\",\n    \"Estudar interfaces e tipos\",\n    \"Praticar com projetos reais\"\n  ]\n}"
                        },
                        "url": {
                            "raw": "{{baseUrl}}/tasks",
                            "host": [
                                "{{baseUrl}}"
                            ],
                            "path": [
                                "tasks"
                            ]
                        }
                    }
                },
                {
                    "name": "Listar Tasks",
                    "request": {
                        "method": "GET",
                        "header": [],
                        "url": {
                            "raw": "{{baseUrl}}/tasks",
                            "host": [
                                "{{baseUrl}}"
                            ],
                            "path": [
                                "tasks"
                            ]
                        }
                    }
                },
                {
                    "name": "Buscar Tasks por Título",
                    "request": {
                        "method": "GET",
                        "header": [],
                        "url": {
                            "raw": "{{baseUrl}}/tasks?search=TypeScript",
                            "host": [
                                "{{baseUrl}}"
                            ],
                            "path": [
                                "tasks"
                            ],
                            "query": [
                                {
                                    "key": "search",
                                    "value": "TypeScript"
                                }
                            ]
                        }
                    }
                },
                {
                    "name": "Buscar Task por ID",
                    "request": {
                        "method": "GET",
                        "header": [],
                        "url": {
                            "raw": "{{baseUrl}}/tasks/1",
                            "host": [
                                "{{baseUrl}}"
                            ],
                            "path": [
                                "tasks",
                                "1"
                            ]
                        }
                    }
                },
                {
                    "name": "Atualizar Task",
                    "request": {
                        "method": "PATCH",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"title\": \"Estudar TypeScript Avançado\",\n  \"description\": \"Aprender conceitos avançados e práticas de TypeScript\"\n}"
                        },
                        "url": {
                            "raw": "{{baseUrl}}/tasks/1",
                            "host": [
                                "{{baseUrl}}"
                            ],
                            "path": [
                                "tasks",
                                "1"
                            ]
                        }
                    }
                },
                {
                    "name": "Deletar Task",
                    "request": {
                        "method": "DELETE",
                        "header": [],
                        "url": {
                            "raw": "{{baseUrl}}/tasks/1",
                            "host": [
                                "{{baseUrl}}"
                            ],
                            "path": [
                                "tasks",
                                "1"
                            ]
                        }
                    }
                }
            ]
        }
    ],
    "variable": [
        {
            "key": "baseUrl",
            "value": "http://localhost:3000",
            "type": "string"
        }
    ]
}